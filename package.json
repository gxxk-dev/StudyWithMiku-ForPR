{
  "name": "study-with-miku",
  "version": "0.0.1",
  "description": "Study with Miku - 和Miku一起学习吧~",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "vite:build": "vite build",
    "generate-icons": "node scripts/generate-icons.js",
    "build": "npm run generate-icons && npm run vite:build && npm run copy-assets",
    "preview": "vite preview",
    "copy-assets": "copyfiles -u 1 public/**/* dist/",
    "dev:worker": "npm run build && wrangler dev --local",
    "deploy:worker": "wrangler deploy"
  },
  "dependencies": {
    "@vueuse/core": "^10.1.2",
    "hono": "^4.11.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "copyfiles": "^2.4.1",
    "sharp": "^0.33.0",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.17.0",
    "wrangler": "^4.53.0"
  }
}
